<div class="row">
  <div class="container-fluid">
    <div class="word-list col-sm-6 col-sm-offset-3">

      <h2>Word:</h2>
      <p><%= @word.term() %></p>

      <h2>Definition:</h2>

      <ul>
        <% @word.definitions().each() do |definition|  %>
        <li><%= definition.meaning() %></li>
        <% end %>
      </ul>

      <a href="/word/<%= @word.id() %>/add_definition">Add a definition for this word</a>
      <br>
      <a href="/">Return to Home</a>
    </div>
  </div>
</div>
